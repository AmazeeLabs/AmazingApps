<div class="layout-page">
  <div class="layout-page__header theme-yellow">
    <div class="layout-page__container">
      {% block header %}
        {% include '#placeholder' %}
      {% endblock %}
    </div>
  </div>
  <div class="layout-page__content theme-white">
    <div class="layout-page__container">
      {% block content %}
        {% include '#placeholder' with { height: '500px' } %}
      {% endblock %}
    </div>
  </div>
  <div class="layout-page__footer theme-black">
    <div class="layout-page__container">
      {% block footer %}
        {% include '#placeholder' %}
      {% endblock %}
    </div>
  </div>
</div>
