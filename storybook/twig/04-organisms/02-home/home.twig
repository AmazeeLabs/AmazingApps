<div class="home">
  {% include '@storybook/02-atoms/title/title.twig' with { title: 'Welcome to <em>Amazing Apps!</em>' | t } %}
  <p><em>{{ 'We totally build amazing apps!' | t }}</em></p>
</div>

{% embed '@storybook/05-layouts/grid/grid.twig' with { columns: 3 } %}
  {% block items %}
    {% include '@storybook/03-molecules/02-teasers/03-teaser-box/teaser-box.twig' with {
      theme: 'black',
      title: 'Experts' | t,
      teasers: experts.teasers,
      url: '/team'
    } only %}

    {% include '@storybook/03-molecules/02-teasers/03-teaser-box/teaser-box.twig' with {
      theme: 'yellow',
      title: 'Job openings' | t,
      teasers: jobs.teasers,
      url: '/jobs'
    } only %}

    {% include '@storybook/03-molecules/02-teasers/03-teaser-box/teaser-box.twig' with {
      theme: 'white',
      title: 'From our blog' | t,
      teasers: articles.teasers,
      url: '/blog'
    } only %}
  {% endblock %}
{% endembed %}
