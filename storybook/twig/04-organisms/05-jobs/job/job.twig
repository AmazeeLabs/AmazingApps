<div class="job">
  {% include '@storybook/02-atoms/title/title.twig' with { title: title } only %}
  {% include '@storybook/02-atoms/date/date.twig'  with { date: date } only %}
  {{ text.processed | raw }}

  {% embed '@storybook/05-layouts/grid/grid.twig' with { columns: 3 } %}
    {% block items %}
      {% include '@storybook/03-molecules/02-teasers/03-teaser-box/teaser-box.twig' with {
        theme: 'black',
        title: 'Colleagues' | t,
        teasers: experts.teasers,
        url: '/blog'
      } only %}

      {% include '@storybook/03-molecules/02-teasers/03-teaser-box/teaser-box.twig' with {
        theme: 'yellow',
        title: 'Similar jobs' | t,
        teasers: jobs.teasers,
        url: '/jobs'
      } only %}

      {% include '@storybook/03-molecules/02-teasers/03-teaser-box/teaser-box.twig' with {
        theme: 'white',
        title: 'Related articles' | t,
        teasers: articles.teasers,
        url: '/jobs'
      } only %}
    {% endblock %}
  {% endembed %}
</div>
