<article class="teaser">
  {% if thumbnail %}
    {% include '@storybook/01-base/05-image/image.twig' with thumbnail only %}
  {% endif %}
  <div class="teaser-content">
    <h3>{{ title }}</h3>
    {% include '@storybook/02-atoms/date/date.twig' %}
    {% include '@storybook/02-atoms/more-link/more-link.twig' with {
      url: url.path,
      title: ('Read more about: ' | t ) ~ title,
      text: 'Learn more' | t
    } only %}
  </div>
</article>
